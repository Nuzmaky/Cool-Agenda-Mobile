<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454545"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coolagenda.ContatosActivity">
    
            
            <TextView
                android:id="@+id/txtNomeContatoP"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:textColor="#fff"
                android:background="#070c69"
                android:padding="3dip"
                android:gravity="center"
                android:text="@string/txtNomeContatoP" />
            
            <Button
		        android:id="@+id/btCompromissos"
		        android:onClick="AbreCompromissos"
		        android:layout_width="80dp"
		        android:layout_height="43dp"
		        android:layout_toRightOf="@+id/txtNomeContatoP"
		        android:textColor="#fff"
		        android:background="#242424"
		        android:text="@string/txtCompromisso"
		        android:textSize="8pt"
		        android:layout_alignRight="@+id/listaContatoActivity"
		      />

        <ListView
            android:id="@+id/listaContatoActivity"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/txtNomeContatoP"> 
			
        </ListView>
      
   
    
</RelativeLayout>