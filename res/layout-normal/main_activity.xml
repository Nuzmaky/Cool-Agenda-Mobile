<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.coolagenda.MainActivity" >

    <TextView
        android:id="@+id/txtNomeContatoP"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:text="@string/txtNomeContatoP"
        android:textColor="#fff"
        android:textSize="10pt" />

    <ListView
        android:id="@+id/listaContatoActivity"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtNomeContatoP" >
    </ListView>

    
    <TextView
        android:id="@+id/txtCompromisso"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:text="@string/txtCompromisso"
        android:textColor="#fff"
        android:textSize="10pt"
        android:layout_marginLeft="200dp"/>
    
    <TextView
                android:id="@+id/txtNomeP"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:textColor="#fff"
                android:text="@string/txtNomeP"
                android:layout_marginLeft="130dp"
                android:layout_below="@+id/txtCompromisso" />

            <TextView
                android:id="@+id/txtDataInicialP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:textColor="#fff"
                android:text="@string/txtDataInicialP"
                android:layout_toRightOf="@+id/txtNomeP"
                android:layout_below="@+id/txtCompromisso"  />

            <TextView
                android:id="@+id/txtDataFinalP"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="3dip"
                android:textColor="#fff"
                android:text="@string/txtDataFinalP"
                android:layout_toRightOf="@+id/txtDataInicialP"
                android:layout_below="@+id/txtCompromisso"  />
    
    <ListView
        android:id="@+id/listaCompromissoActivity"
        android:layout_width="310dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="130dp" 
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txtCompromisso">
    </ListView>

</RelativeLayout>